<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_im_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:padding="5dp"
        android:text="1970-01-01 08:00"
        android:textColor="@color/gray_text"/>
    <ImageView
        android:id="@+id/iv_im_sender_face"
        android:layout_below="@id/tv_im_msg_time"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_contacts_detial_people"/>
    <TextView
        android:id="@+id/tv_im_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_im_sender_face"
        android:layout_toRightOf="@id/iv_im_sender_face"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/common_text_color"
        android:text="我"/>
    <TextView
        android:id="@+id/tv_im_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_im_sender_face"
        android:layout_below="@id/tv_im_sender"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:paddingBottom="5dp"
        android:text="你好"/>

    <ImageView
        android:id="@+id/iv_im_self_face"
        android:layout_below="@id/tv_im_msg_time"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_contacts_detial_people"/>
</RelativeLayout>