<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/topbar_background"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/topbar_background"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/message_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/tv_head_a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="消息"
                android:textColor="@color/text_view_select"
                android:textSize="18sp" />

            <View
                android:id="@+id/view_message"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/text_view_select"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/tv_head_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="记录"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:id="@+id/view_record"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/text_view_select"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_bar_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="@dimen/topBar_button_height"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/contact_margin"
            android:contentDescription="@string/app_name"
            android:gravity="bottom"
            android:textColor="@color/topbar_button_color"
            android:textSize="@dimen/text_content_size"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/right_iv"
            android:layout_width="@dimen/topBar_button_height"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:gravity="bottom"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>