<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin"
    android:layout_marginRight="@dimen/dialog_margin"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mTvContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="@dimen/dialog_margin"
        android:paddingTop="@dimen/dialog_margin"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/text_content_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/subline_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mButton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/dialog_button_color"
            android:textSize="@dimen/text_content_size" />

        <View
            android:id="@+id/mBtnLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/subline_color" />

        <Button
            android:id="@+id/mButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/dialog_button_color"
            android:textSize="@dimen/text_content_size" />
    </LinearLayout>

</LinearLayout>