<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.xt.mobile.terminal.ui.activity.YYMettingActivity">
    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">
        <com.xt.mobile.terminal.view.ClearEditText
            android:id="@+id/activity_yymetting_cet"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:hint="请输入会议主题"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/directory_rect_margin_5"
            android:background="@color/gray_text"/>
        <!--开始时间-->
        <LinearLayout
            android:id="@+id/activity_yymetting_kssj_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/directory_rect_margin_5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_black"
                android:text="开始时间"/>
            <TextView
                android:id="@+id/activity_yymetting_kssj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_black"
                android:layout_marginLeft="@dimen/login_padding_30" />
        </LinearLayout>

        <!--结束时间-->
        <LinearLayout
            android:id="@+id/activity_yymetting_jssj_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_black"
                android:text="结束时间"/>
            <TextView
                android:id="@+id/activity_yymetting_jssj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_black"
                android:layout_marginLeft="@dimen/login_padding_30" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
