<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xt.mobile.terminal.ui.activity.ContactsDetialActivity">
    <include
        android:id="@+id/inc_contacts_detail"
        layout="@layout/top_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_text"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/shape_my_metting_item_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@drawable/icon_contacts_detial_people"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_contacts_detial_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张山"
                    android:textColor="@color/topbar_background"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/activity_contacts_detial_department_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="xx公司/研发中心/产品部"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/shape_my_metting_item_bg"
            android:orientation="vertical">
          <!--发送信息-->
          <LinearLayout
              android:id="@+id/activity_contacts_detial_send_messge_ll"
              android:layout_width="match_parent"
                android:layout_height="70dp"
              android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/icon_contacts_detial_messge"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/contacts_detial_send_messge"
                    android:textColor="@color/topbar_background"
                    android:textSize="16sp" />
          </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_text"/>
            <!--视频呼叫-->
            <LinearLayout
                android:id="@+id/activity_contacts_detial_video_call_ll"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_contacts_detial_vedio"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/contacts_detial_video_call"
                    android:textColor="@color/topbar_background"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_text"/>
            <!--语音呼叫-->
            <LinearLayout
                android:id="@+id/activity_contacts_detial_voice_call_ll"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_contacts_detial_voice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="@string/contacts_detial_voice_call"
                    android:textColor="@color/topbar_background"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
