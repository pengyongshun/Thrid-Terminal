<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/directory_rect_margin_5"
        android:layout_marginRight="@dimen/directory_rect_margin_10"
        android:layout_marginTop="@dimen/directory_rect_margin_10"
        android:background="@drawable/shape_my_metting_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_group_meeting_list" />

            <TextView
                android:id="@+id/item_group_metting_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="会议主题：我的会议"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@color/common_text_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/item_group_metting_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/directory_rect_margin_10"
                android:src="@drawable/selet_list_metting_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/directory_rect_margin_5"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_group_metting_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="会议详情"
                    android:singleLine="true"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_group_metting_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/directory_rect_margin_5"
                    android:gravity="center_vertical"
                    android:text="张三 李四 王五 赵六"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_group_metting_delet_ll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/shape_jr_metting_item_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="@string/meeting_group_join_meeting"
                    android:textColor="@color/topbar_background" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>