<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_im_top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"

    android:paddingTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="@dimen/topBar_button_height"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/contact_margin"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="@color/topbar_button_color"
            android:textSize="@dimen/text_content_size"
            android:visibility="gone" />

    <ImageView
        android:id="@+id/left_iv"
        android:layout_width="@dimen/topBar_button_height"
        android:layout_height="@dimen/topBar_button_height"
        android:src="@drawable/im_top_bar_back"
        android:scaleType="center"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_title_size" />


        <ImageView
            android:id="@+id/iv_im_group"
        android:layout_width="35dp"
        android:layout_height="35dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/selet_im_group_btn"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_im_add_member"
        android:layout_width="40dp"
        android:layout_height="40dp"
            android:src="@drawable/im_right_add"
        android:layout_marginRight="5dp"
        android:background="@null"
            android:visibility="gone" />
    </LinearLayout>

