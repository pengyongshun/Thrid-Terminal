<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xt.mobile.terminal.ui.activity.JoinMettingPeopleListActivity">
    <include layout="@layout/top_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/activity_join_metting_poeple_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/activity_join_metting_poeple_empty_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:text="亲，目前没有参会成员！"/>
    </RelativeLayout>

    <Button
        android:id="@+id/activity_join_metting_poeple_list_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/p50"
        android:layout_marginLeft="@dimen/p50"
        android:layout_marginTop="@dimen/directory_rect_margin_5"
        android:background="@drawable/button_background"
        android:text="@string/metting_ask"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/directory_rect_margin_5"
        />

    <Button
        android:id="@+id/activity_join_metting_poeple_list_yc_btn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/directory_rect_margin_5"
        android:background="@drawable/shape_jr_metting_item_bg"
        android:text="移除（2）"
        android:textColor="@color/topbar_background"
        android:layout_marginBottom="@dimen/directory_rect_margin_5"
        />
</LinearLayout>
