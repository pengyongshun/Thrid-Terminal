<?xml version="1.0" encoding="utf-8"?>
<com.xt.mobile.terminal.view.SlidingDeleteView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdv_msg_session_content"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_msg_session_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_msg_session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:padding="5dp"
                android:text="1970-01-01 08:00"
                android:textColor="@color/gray_text"/>
            <ImageView
                android:id="@+id/iv_msg_session_face"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_contacts_detial_people"/>
            <TextView
                android:id="@+id/tv_msg_session_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_msg_session_face"
                android:padding="5dp"
                android:textColor="@color/common_text_color"
                android:textSize="16sp"
                android:text="我"/>
            <TextView
                android:id="@+id/tv_msg_session_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_msg_session_face"
                android:layout_below="@id/tv_msg_session_sender"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="你好"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_text"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/ll_remove_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_msg_session_remove"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_red_remove_bg"
                android:text="删除"/>
        </FrameLayout>
    </LinearLayout>
</com.xt.mobile.terminal.view.SlidingDeleteView>

