<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/directory_rect_margin_10"
        android:layout_marginLeft="@dimen/directory_rect_margin_10"
        android:layout_marginRight="@dimen/directory_rect_margin_10"
        android:background="@drawable/shape_my_metting_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_my_pr"/>
            <TextView
                android:id="@+id/item_my_metting_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="会议主题：我的会议"
                android:textColor="@color/common_text_black"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/item_my_metting_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/directory_rect_margin_10"
                android:src="@drawable/selet_list_metting_btn"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_my_metting_ID_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="会议ID：3712345"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/item_my_metting_ks_sj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/directory_rect_margin_5"
                    android:gravity="center_vertical"
                    android:text="开始时间：2020.05.07  18:00-19:00"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/item_my_metting_js_sj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/directory_rect_margin_5"
                    android:gravity="center_vertical"
                    android:text="结束时间：2020.05.07  18:00-19:00"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_my_metting_jr_ll"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/shape_jr_metting_item_bg"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/directory_rect_margin_5"
                    android:gravity="center"
                    android:text="@string/jr_metting"
                    android:textColor="@color/topbar_background" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>