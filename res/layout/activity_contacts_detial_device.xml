<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_text">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/shape_my_metting_item_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@drawable/icon_contacts_detial_device"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10">
                <TextView
                    android:id="@+id/activity_contacts_detial_device_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编码器72.5"
                    android:textColor="@color/topbar_background"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/activity_contacts_detial_device_department_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx公司/研发中心/产品部"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/shape_my_metting_item_bg">
            <!--视频监控-->
            <LinearLayout
                android:id="@+id/activity_contacts_detial_device_vedio_control_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_contacts_detial_vedio_control"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/topbar_background"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textSize="16sp"
                    android:text="@string/contacts_detial_video_control"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
